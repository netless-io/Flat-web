{
    "include": ["src"],
    "compilerOptions": {
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "declaration": true,
        "declarationDir": "dist",
        "target": "ES5",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist"
    }
}
